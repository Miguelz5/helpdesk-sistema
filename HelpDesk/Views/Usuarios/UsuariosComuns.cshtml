@model IEnumerable<HelpDesk.Models.Usuario>

@{
    ViewBag.Title = "Usuários Comuns";
}
<link href="~/css/site.css" rel="stylesheet" />
<div class="container py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="page-title">
    <i class="fas fa-users me-2 text-info"></i>
    Usuários
</h2>
<p class="text-muted">Gerencie os usuários do sistema Help Desk</p>
        </div>
        <div class="col-md-4 text-end">
    <div class="d-flex gap-2 justify-content-end">
        <!-- Botão para Voltar para Administradores -->
        @Html.ActionLink(" Ver Administradores", "Index", null, new { 
            @class = "btn btn-primary",
            style = "background-color: #0d6efd; border-color: #0d6efd; color: white; padding: 8px 16px; font-weight: 500; border-radius: 6px;" 
        })
        <!-- ✅ BOTÃO CORRIGIDO COM PARÂMETRO -->
@Html.ActionLink(" Cadastrar Usuário", "Create", new { from = "usuarioscomuns" }, new { 
    @class = "btn btn-success",
    style = "background-color: #198754; border-color: #198754; color: white; padding: 8px 16px; font-weight: 500; border-radius: 6px;" 
})
    </div>
</div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
    <i class="fas fa-users me-2 text-info"></i>
    Lista de Usuários
</h5>
                <span class="badge bg-info">
                    <i class="fas fa-users me-1"></i>
                    @Model.Count() Usuário(s)
                </span>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th><i class="fas fa-id-badge me-1"></i> ID</th>
                                <th><i class="fas fa-user me-1"></i> Nome</th>
                                <th><i class="fas fa-envelope me-1"></i> Email</th>
                                <th><i class="fas fa-calendar me-1"></i> Data de Cadastro</th>
                                <th><i class="fas fa-user-tag me-1"></i> Tipo</th>
                                <th><i class="fas fa-cogs me-1"></i> Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-secondary">#@item.Id</span>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-circle me-3 bg-info">
                                                <i class="fas fa-user text-white"></i>
                                            </div>
                                            <div>
                                                <strong>@item.Nome</strong>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@item.Email</td>
                                    <td>@item.DataCadastro.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-user me-1"></i>
                                            Usuário Comum
                                        </span>
                                    </td>
                                    <td>
                                        @Html.ActionLink(" Editar", "Edit", new { id = item.Id }, new { 
                                            @class = "btn btn-outline-primary btn-sm me-1" 
                                        })
                                        @Html.ActionLink(" Excluir", "Delete", new { id = item.Id }, 
                                            new { 
                                                @class = "btn btn-outline-danger btn-sm",
                                                onclick = "return confirm('Tem certeza que deseja excluir este usuário?');" 
                                            })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-state text-center py-5">
                    <i class="fas fa-users fa-4x text-muted mb-3"></i>
                    <h5 class="text-muted">Nenhum usuário comum cadastrado</h5>
                    <p class="text-muted">Todos os usuários cadastrados são administradores</p>
                </div>
            }
        </div>
    </div>
</div>