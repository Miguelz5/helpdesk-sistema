<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sistema Help Desk</title>

    <!-- Adicione os links para Bootstrap manualmente -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .bg-purple {
            background-color: #6f42c1 !important;
        }

        body {
            padding-top: 60px;
        }

        /* SOLUÇÃO DEFINITIVA PARA TEXTO PRETO NOS DROPDOWNS */
        /* Forçar cor preta em TODOS os elementos de formulário */
        .form-control,
        .form-select,
        select,
        input:not([type="checkbox"]):not([type="radio"]),
        textarea {
            color: #000000 !important;
            background-color: #ffffff !important;
        }

            /* Estado focus */
            .form-control:focus,
            .form-select:focus {
                color: #000000 !important;
                background-color: #ffffff !important;
                border-color: #6f42c1;
                box-shadow: 0 0 0 0.2rem rgba(111, 66, 193, 0.25);
            }

            /* Options dos dropdowns */
            .form-select option,
            select option,
            .form-control option {
                color: #000000 !important;
                background-color: #ffffff !important;
            }

            /* Placeholder também preto */
            .form-control::placeholder,
            .form-select::placeholder {
                color: #666666 !important;
                opacity: 1;
            }

            /* Para elementos selecionados */
            .form-select:focus option:checked,
            select:focus option:checked {
                color: #000000 !important;
                background-color: #e9ecef !important;
            }

            /* Remover qualquer estilo do Bootstrap que force cores escuras */
            .form-select:not([multiple]):not([size]) {
                background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%23000' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='m2 5 6 6 6-6'/%3e%3c/svg%3e");
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-purple fixed-top">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Chamados")">Sistema Help Desk</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Chamados")">Chamados</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Create", "Chamados")">Novo Chamado</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Usuarios")">Administradores</a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <span class="navbar-text me-3">
                            Olá, @Context.Session.GetString("UsuarioNome")
                        </span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Logout", "Auth")">Sair</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @if (TempData["MensagemSucesso"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mt-3">
                @TempData["MensagemSucesso"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["MensagemErro"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mt-3">
                @TempData["MensagemErro"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Sistema Help Desk</p>
        </footer>
    </div>

    <!-- Adicione os scripts manualmente -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>