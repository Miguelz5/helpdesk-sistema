@model IEnumerable<HelpDesk.Models.Chamado>

@{
    ViewBag.Title = "Sistema Help Desk";
}

<h2>Sistema Help Desk - Visão Administrativa</h2>

<div class="row">
    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title">Total de Chamados</h5>
                <p class="card-text display-4">@ViewBag.TotalChamados</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning mb-3">
            <div class="card-body">
                <h5 class="card-title">Chamados Abertos</h5>
                <p class="card-text display-4">@ViewBag.ChamadosAbertos</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">Chamados Resolvidos</h5>
                <p class="card-text display-4">@ViewBag.ChamadosResolvidos</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-danger mb-3">
            <div class="card-body">
                <h5 class="card-title">Chamados Urgentes</h5>
                <p class="card-text display-4">@ViewBag.ChamadosUrgentes.Count</p>
            </div>
        </div>
    </div>
</div>

<p>
    @Html.ActionLink("Criar Novo Chamado", "Create", null, new { @class = "btn btn-primary" })
</p>

<h3>Chamados Urgentes</h3>
@if (ViewBag.ChamadosUrgentes.Count > 0)
{
    <table class="table table-striped table-bordered">
        <tr class="bg-danger text-white">
            <th>Título</th>
            <th>Descrição</th>
            <th>Data de Abertura</th>
            <th>Status</th>
            <th>Ações</th>
        </tr>
        @foreach (var item in ViewBag.ChamadosUrgentes)
        {
            <tr>
                <td>@item.Titulo</td>
                <td>@item.Descricao</td>
                <td>@item.DataAbertura.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.Status</td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-warning" })
                    @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })
                </td>
            </tr>
        }
    </table>
}
else
{
    <div class="alert alert-info">Nenhum chamado urgente no momento.</div>
}

<h3>Todos os Chamados</h3>
<table class="table table-striped table-bordered">
    <tr>
        <th>Título</th>
        <th>Descrição</th>
        <th>Data de Abertura</th>
        <th>Status</th>
        <th>Prioridade</th>
        <th>Responsável</th>
        <th>Ações</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Titulo</td>
            <td>@item.Descricao</td>
            <td>@item.DataAbertura.ToString("dd/MM/yyyy HH:mm")</td>
            <td>
                @if (item.Status == "Aberto")
                {
                    <span class="badge badge-warning">@item.Status</span>
                }
                else if (item.Status == "Em Andamento")
                {
                    <span class="badge badge-info">@item.Status</span>
                }
                else
                {
                    <span class="badge badge-success">@item.Status</span>
                }
            </td>
            <td>
                @if (item.Prioridade == "Urgente")
                {
                    <span class="badge badge-danger">@item.Prioridade</span>
                }
                else if (item.Prioridade == "Alta")
                {
                    <span class="badge badge-warning">@item.Prioridade</span>
                }
                else if (item.Prioridade == "Média")
                {
                    <span class="badge badge-info">@item.Prioridade</span>
                }
                else
                {
                    <span class="badge badge-secondary">@item.Prioridade</span>
                }
            </td>
            <td>@item.Responsavel</td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-warning" })
                @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })
            </td>
        </tr>
    }
</table>