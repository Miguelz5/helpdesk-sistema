@model IEnumerable<HelpDesk.Models.Chamado>

@{
    ViewBag.Title = "Sistema Help Desk - Dashboard";
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="page-title">
                <i class="fas fa-tachometer-alt me-2 text-primary"></i>
                Sistema Help Desk - Visão Administrativa
            </h2>
        </div>
        <div class="col-md-4 text-end">
            @Html.ActionLink("Criar Novo Chamado", "Create", "Chamados", null, new { @class = "btn btn-primary-custom btn-custom" })
        </div>
    </div>

    <!-- Cards de Estatísticas -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card stat-card primary">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon" style="background: var(--primary-color);">
                            <i class="fas fa-ticket-alt"></i>
                        </div>
                        <div class="ms-3">
                            <h3 class="stat-number">@ViewBag.TotalChamados</h3>
                            <p class="stat-label">Total de Chamados</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card stat-card warning">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon" style="background: var(--warning-color);">
                            <i class="fas fa-clock"></i>
                        </div>
                        <div class="ms-3">
                            <h3 class="stat-number">@ViewBag.ChamadosAbertos</h3>
                            <p class="stat-label">Chamados Abertos</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card stat-card success">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon" style="background: var(--success-color);">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <div class="ms-3">
                            <h3 class="stat-number">@ViewBag.ChamadosResolvidos</h3>
                            <p class="stat-label">Chamados Resolvidos</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card stat-card danger">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon" style="background: var(--danger-color);">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <div class="ms-3">
                            <h3 class="stat-number">@ViewBag.ChamadosUrgentes.Count</h3>
                            <p class="stat-label">Chamados Urgentes</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Gráfico e Estatísticas por Período -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="card-title mb-0 section-header">
                        <i class="fas fa-chart-pie section-icon"></i>
                        Distribuição de Chamados
                    </h5>
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        <canvas id="statusChart" width="400" height="200"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- NOVA SEÇÃO: Estatísticas por Período -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="card-title mb-0 section-header">
                        <i class="fas fa-calendar-alt section-icon"></i>
                        Estatísticas por Período
                    </h5>
                </div>
                <div class="card-body">
                    <!-- HOJE -->
                    <div class="period-stats mb-4">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h6 class="mb-0 text-primary">
                                <i class="fas fa-sun me-1"></i>Hoje
                            </h6>
                            <small class="text-muted">@DateTime.Now.ToString("dd/MM/yyyy")</small>
                        </div>
                        <div class="row text-center">
                            <div class="col-6">
                                <div class="border-end">
                                    <h4 class="text-warning mb-0">@ViewBag.ChamadosHoje</h4>
                                    <small class="text-muted">Recebidos</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <h4 class="text-success mb-0">@ViewBag.ResolvidosHoje</h4>
                                <small class="text-muted">Resolvidos</small>
                            </div>
                        </div>
                    </div>

                    <!-- ESTA SEMANA -->
                    <div class="period-stats mb-4">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h6 class="mb-0 text-info">
                                <i class="fas fa-calendar-week me-1"></i>Esta Semana
                            </h6>
                            <small class="text-muted">Semana atual</small>
                        </div>
                        <div class="row text-center">
                            <div class="col-6">
                                <div class="border-end">
                                    <h4 class="text-warning mb-0">@ViewBag.ChamadosSemana</h4>
                                    <small class="text-muted">Recebidos</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <h4 class="text-success mb-0">@ViewBag.ResolvidosSemana</h4>
                                <small class="text-muted">Resolvidos</small>
                            </div>
                        </div>
                    </div>

                    <!-- ESTE MÊS -->
                    <div class="period-stats">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h6 class="mb-0 text-success">
                                <i class="fas fa-calendar me-1"></i>Este Mês
                            </h6>
                            <small class="text-muted">@DateTime.Now.ToString("MMMM")</small>
                        </div>
                        <div class="row text-center">
                            <div class="col-6">
                                <div class="border-end">
                                    <h4 class="text-warning mb-0">@ViewBag.ChamadosMes</h4>
                                    <small class="text-muted">Recebidos</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <h4 class="text-success mb-0">@ViewBag.ResolvidosMes</h4>
                                <small class="text-muted">Resolvidos</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Chamados Urgentes - PARTE QUE FOI RESTAURADA -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="card-title mb-0 section-header">
                        <i class="fas fa-exclamation-triangle section-icon text-danger"></i>
                        Chamados Urgentes
                    </h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.ChamadosUrgentes.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th><i class="fas fa-hashtag me-1"></i> Nº Chamado</th> <!-- NOVA COLUNA -->
                                        <th><i class="fas fa-heading me-1"></i> Título</th>
                                        <th><i class="fas fa-align-left me-1"></i> Descrição</th>
                                        <th><i class="fas fa-tag me-1"></i> Categoria</th>
                                        <th><i class="fas fa-calendar me-1"></i> Data de Abertura</th>
                                        <th><i class="fas fa-flag me-1"></i> Status</th>
                                        <th><i class="fas fa-cogs me-1"></i> Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.ChamadosUrgentes)
                                    {
                                        <tr class="border-start border-danger border-3">
                                            <td>
                                                <strong class="text-primary">#@item.NumeroChamado</strong>
                                            </td>
                                            <td><strong>@item.Titulo</strong></td>
                                            <td>@item.Descricao</td>
                                            <td>
                                                <span class="badge" style="background-color:
                                                            @(item.Categoria == "Hardware" ? "#6f42c1" :
                                                                                                                          item.Categoria == "Software" ? "#0d6efd" :
                                                                                                                          item.Categoria == "Rede" ? "#198754" :
                                                                                                                          item.Categoria == "Acesso" ? "#fd7e14" : "#6c757d"); color: white;">
                                            @item.Categoria
                                        </span>
                                    </td>
                                    <td>@item.DataAbertura.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        @if (item.Status == "Aberto")
                                                {
                                                    <span class="badge badge-warning status-badge">@item.Status</span>
                                                }
                                                else if (item.Status == "Em Andamento")
                                                {
                                                    <span class="badge badge-info status-badge">@item.Status</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-success status-badge">@item.Status</span>
                                                }
                                            </td>
                                            <td>
                                                @Html.ActionLink("Visualizar", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm me-1" })
                                                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-primary btn-sm me-1" })
                                                @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger btn-sm" })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info alert-custom">
                            <i class="fas fa-info-circle me-2"></i>
                            Nenhum chamado urgente no momento.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Todos os Chamados - PARTE QUE FOI RESTAURADA -->
    <div class="row">
        <div class="col-12">
            <div class="table-modern">
                <div class="p-3 bg-white">
                    <h5 class="mb-3 section-header">
                        <i class="fas fa-list section-icon"></i>
                        Todos os Chamados
                    </h5>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th><i class="fas fa-hashtag me-1"></i> Nº Chamado</th> <!-- NOVA COLUNA -->
                                    <th><i class="fas fa-heading me-1"></i> Título</th>
                                    <th><i class="fas fa-align-left me-1"></i> Descrição</th>
                                    <th><i class="fas fa-tag me-1"></i> Categoria</th>
                                    <th><i class="fas fa-calendar me-1"></i> Data de Abertura</th>
                                    <th><i class="fas fa-flag me-1"></i> Status</th>
                                    <th><i class="fas fa-sort-amount-up me-1"></i> Prioridade</th>
                                    <th><i class="fas fa-user me-1"></i> Responsável</th>
                                    <th><i class="fas fa-cogs me-1"></i> Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong class="text-primary">#@item.NumeroChamado</strong>
                                        </td>
                                        <td><strong>@item.Titulo</strong></td>
                                        <td>@item.Descricao</td>
                                        <td>
                                            <span class="badge" style="background-color:
                                                    @(item.Categoria == "Hardware" ? "#6f42c1" :
                                                                                                                  item.Categoria == "Software" ? "#0d6efd" :
                                                                                                                  item.Categoria == "Rede" ? "#198754" :
                                                                                                                  item.Categoria == "Acesso" ? "#fd7e14" : "#6c757d"); color: white;">
                                            @item.Categoria
                                        </span>
                                    </td>
                                    <td>@item.DataAbertura.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        @if (item.Status == "Aberto")
                                            {
                                                <span class="badge badge-warning status-badge">@item.Status</span>
                                            }
                                            else if (item.Status == "Em Andamento")
                                            {
                                                <span class="badge badge-info status-badge">@item.Status</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-success status-badge">@item.Status</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.Prioridade == "Urgente")
                                            {
                                                <span class="badge badge-danger">@item.Prioridade</span>
                                            }
                                            else if (item.Prioridade == "Alta")
                                            {
                                                <span class="badge badge-warning">@item.Prioridade</span>
                                            }
                                            else if (item.Prioridade == "Média")
                                            {
                                                <span class="badge badge-info">@item.Prioridade</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-secondary">@item.Prioridade</span>
                                            }
                                        </td>
                                        <td>@item.Responsavel</td>
                                        <td>
                                            @Html.ActionLink("Visualizar", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm me-1" })
                                            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-primary btn-sm me-1" })
                                            @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger btn-sm" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Script do gráfico -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        setTimeout(function() {
            const ctx = document.getElementById('statusChart');

            if (!ctx || typeof Chart === 'undefined') {
                console.error('Canvas ou Chart.js não encontrado');
                return;
            }

            try {
                const statusChart = new Chart(ctx, {
                    type: 'doughnut',
                    data: {
                        labels: ['Abertos', 'Em Andamento', 'Resolvidos', 'Urgentes'],
                        datasets: [{
                            data: [
                                @ViewBag.ChamadosAbertos,
                                @ViewBag.ChamadosEmAndamento,
                                @ViewBag.ChamadosResolvidos,
                                @ViewBag.ChamadosUrgentes.Count
                            ],
                            backgroundColor: [
                                '#f59e0b', // Laranja - Abertos
                                '#3b82f6', // Azul - Em Andamento
                                '#10b981', // Verde - Resolvidos
                                '#ef4444'  // Vermelho - Urgentes
                            ],
                            borderWidth: 2,
                            borderColor: '#ffffff',
                            hoverOffset: 15
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                position: 'bottom',
                                labels: {
                                    padding: 20,
                                    usePointStyle: true,
                                    font: {
                                        size: 12
                                    }
                                }
                            }
                        },
                        cutout: '65%'
                    }
                });
            } catch (error) {
                console.error('Erro ao criar gráfico:', error);
            }
        }, 100);
    });
</script>