@model HelpDesk.Models.Chamado

@{
    ViewBag.Title = "Abrir Novo Chamado";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">
            <i class="fas fa-plus-circle"></i> Abrir Novo Chamado
        </h4>
    </div>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="~/css/site.css" rel="stylesheet" />
    <div class="card-body">
        @using (Html.BeginForm("Create", "Chamados", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

            <!-- MENSAGEM DE ERRO GERAL -->
            @if (TempData["MensagemErro"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @TempData["MensagemErro"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- VALIDAÇÃO DO FORMULÁRIO -->
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Titulo, htmlAttributes: new { @class = "control-label fw-bold" })
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-heading"></i></span>
                    @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { 
                        @class = "form-control" + (ViewData.ModelState["Titulo"]?.Errors?.Count > 0 ? " is-invalid" : ""),
                        placeholder = "Digite o título do chamado"
                    } })
                </div>
                @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger small fw-bold" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label fw-bold" })
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-align-left"></i></span>
                    @Html.TextAreaFor(model => model.Descricao, new { 
                        @class = "form-control" + (ViewData.ModelState["Descricao"]?.Errors?.Count > 0 ? " is-invalid" : ""), 
                        rows = 5, 
                        placeholder = "Descreva detalhadamente o problema..." 
                    })
                </div>
                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger small fw-bold" })
            </div>

            <!-- CATEGORIA -->
            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Categoria, htmlAttributes: new { @class = "control-label fw-bold" })
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-tag"></i></span>
                    @Html.DropDownListFor(model => model.Categoria,
                        new SelectList(ViewBag.CategoriaList),
                        "Selecione a categoria",
                        new { 
                            @class = "form-control" + (ViewData.ModelState["Categoria"]?.Errors?.Count > 0 ? " is-invalid" : "")
                        })
                </div>
                @Html.ValidationMessageFor(model => model.Categoria, "", new { @class = "text-danger small fw-bold" })
            </div>

            <div class="row">
               <!-- PRIORIDADE (AUTOMÁTICA) -->
<div class="col-md-6">
    <div class="form-group mb-3">
        <label class="control-label fw-bold">Prioridade (Automática)</label>
        <div class="input-group">
            <span class="input-group-text"><i class="fas fa-exclamation-triangle"></i></span>
            <input type="text" class="form-control" id="prioridadeDisplay" 
                   value="Selecione uma categoria" readonly style="background-color: #f8f9fa;">
            @Html.HiddenFor(model => model.Prioridade, new { id = "prioridadeHidden" })
        </div>
        <small class="text-muted">A prioridade será definida automaticamente conforme a categoria</small>
        @Html.ValidationMessageFor(model => model.Prioridade, "", new { @class = "text-danger small fw-bold" })
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const categoriaSelect = document.getElementById('Categoria');
            const prioridadeDisplay = document.getElementById('prioridadeDisplay');
            const prioridadeHidden = document.getElementById('prioridadeHidden');

            // Mapeamento categoria -> prioridade conforme especificado
            const mapeamentoPrioridade = {
                'Hardware': 'Alta',
                'Software': 'Média', 
                'Rede': 'Urgente',
                'Acesso': 'Urgente',
                'Outros': 'Baixa'
            };

            function atualizarPrioridade() {
                const categoria = categoriaSelect.value;
                const prioridade = mapeamentoPrioridade[categoria] || 'Selecione uma categoria';
                
                prioridadeDisplay.value = prioridade;
                prioridadeHidden.value = prioridade;

                // Adicionar cores conforme a prioridade
                prioridadeDisplay.className = 'form-control ';
                if (prioridade === 'Urgente') {
                    prioridadeDisplay.classList.add('bg-danger', 'text-white');
                } else if (prioridade === 'Alta') {
                    prioridadeDisplay.classList.add('bg-warning', 'text-dark');
                } else if (prioridade === 'Média') {
                    prioridadeDisplay.classList.add('bg-info', 'text-white');
                } else if (prioridade === 'Baixa') {
                    prioridadeDisplay.classList.add('bg-success', 'text-white');
                } else {
                    prioridadeDisplay.classList.add('bg-light');
                }
            }

            categoriaSelect.addEventListener('change', atualizarPrioridade);
            
            // Inicializar
            atualizarPrioridade();
        });
    </script>
}
                <div class="col-md-6">
                    <!-- Espaço vazio -->
                </div>
            </div>


 <!-- ANEXOS -->
    <div class="form-group mb-3">
        <label class="control-label fw-bold">Anexos</label>
        <div class="input-group">
            <span class="input-group-text"><i class="fas fa-paperclip"></i></span>
            <input type="file" class="form-control" name="anexos" multiple 
                   accept=".pdf,.doc,.docx,.jpg,.jpeg,.png,.txt,.xls,.xlsx">
        </div>
        <small class="text-muted">
            Formatos aceitos: PDF, Word, Excel, JPG, PNG, TXT. Tamanho máximo: 10MB por arquivo.
        </small>
    </div>

    <div class="form-group mt-4">
        <button type="submit" class="btn btn-success">
            <i class="fas fa-check"></i> Criar Chamado
        </button>
        @Html.ActionLink(" Voltar", "Index", "Chamados", null, new { @class = "btn btn-secondary" })
    </div>
}

    </div>
</div>

<style>
    .is-invalid {
        border-color: #dc3545 !important;
        box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25) !important;
    }
    
    .text-danger {
        font-weight: 500 !important;
    }
</style>