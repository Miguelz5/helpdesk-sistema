@model IEnumerable<HelpDesk.Models.Faq>

@{
    ViewBag.Title = "Gerenciar FAQ";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="page-title">
                <i class="fas fa-cogs me-2 text-primary"></i>
                Gerenciar Perguntas Frequentes
            </h2>
            <p class="text-muted">Adicione, edite ou remove perguntas do FAQ</p>
        </div>
        <div class="col-md-4 text-end">
            @Html.ActionLink(" Voltar para FAQ", "Index", "Faq", null, new { @class = "btn btn-secondary" })
            @Html.ActionLink(" Nova Pergunta", "Create", "Faq", null, new { @class = "btn btn-success" })
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <h5 class="mb-0">
                <i class="fas fa-list me-2 text-primary"></i>
                Lista de Perguntas
            </h5>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    Nenhuma pergunta cadastrada.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Ordem</th>
                                <th>Pergunta</th>
                                <th>Categoria</th>
                                <th>Status</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Ordem</td>
                                    <td>@item.Pergunta</td>
                                    <td>
                                        <span class="badge bg-secondary">@item.Categoria</span>
                                    </td>
                                    <td>
                                        @if (item.Ativo)
                                        {
                                            <span class="badge bg-success">Ativo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inativo</span>
                                        }
                                    </td>
                                    <td>
                                        @Html.ActionLink(" Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-primary btn-sm me-1" })

                                        <form asp-action="ToggleStatus" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-sm @(item.Ativo ? "btn-warning" : "btn-success")">
                                                @(item.Ativo ? "Desativar" : "Ativar")
                                            </button>
                                        </form>

                                        <form asp-action="Delete" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-outline-danger btn-sm"
                                                    onclick="return confirm('Tem certeza que deseja excluir esta pergunta?')">
                                                Excluir
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>