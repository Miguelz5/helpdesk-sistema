@model IEnumerable<IGrouping<string, HelpDesk.Models.Faq>>

@{
    ViewBag.Title = "Perguntas Frequentes (FAQ)";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="page-title">
                <i class="fas fa-question-circle me-2 text-primary"></i>
                Perguntas Frequentes
            </h2>
            <p class="text-muted">Encontre respostas para as dúvidas mais comuns</p>
        </div>
        <div class="col-md-4 text-end">
            @Html.ActionLink(" Voltar para Chamados", "Index", "Chamados", null, new { @class = "btn btn-secondary" })
            @if (User.Identity.IsAuthenticated)
            {
                @Html.ActionLink(" Gerenciar FAQ", "Admin", "Faq", null, new { @class = "btn btn-primary" })
            }
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            Nenhuma pergunta frequente cadastrada no momento.
        </div>
    }
    else
    {
        foreach (var categoria in Model)
        {
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-folder me-2 text-warning"></i>
                        @categoria.Key
                    </h5>
                </div>
                <div class="card-body">
                    <div class="accordion" id="accordion@(categoria.Key.Replace(" ", ""))">
                        @foreach (var faq in categoria)
                        {
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="heading@(faq.Id)">
                                    <button class="accordion-button collapsed" type="button"
                                            data-bs-toggle="collapse" data-bs-target="#collapse@(faq.Id)"
                                            aria-expanded="false" aria-controls="collapse@(faq.Id)">
                                        <i class="fas fa-question me-2 text-primary"></i>
                                        @faq.Pergunta
                                    </button>
                                </h2>
                                <div id="collapse@(faq.Id)" class="accordion-collapse collapse"
                                     aria-labelledby="heading@(faq.Id)" data-bs-parent="#accordion@(categoria.Key.Replace(" ", ""))">
                                    <div class="accordion-body">
                                        <i class="fas fa-lightbulb me-2 text-warning"></i>
                                        @faq.Resposta
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    }
</div>