@model HelpDesk.Models.LoginModel

@{
    ViewBag.Title = "Login - Sistema Help Desk";
    Layout = null; // Não usar o layout padrão
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #6f42c1, #007bff);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-container {
            background: white;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.2);
            width: 100%;
            max-width: 400px;
            padding: 30px;
        }

        .login-logo {
            text-align: center;
            margin-bottom: 30px;
        }

            .login-logo h2 {
                color: #6f42c1;
                font-weight: bold;
            }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-logo">
            <h2>Help Desk</h2>
            <p class="text-muted">Área do Administrador</p>
        </div>

        @if (TempData["MensagemSucesso"] != null)
        {
            <div class="alert alert-success">
                @TempData["MensagemSucesso"]
            </div>
        }

        @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Email, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "seu@email.com" })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Senha, new { @class = "form-label" })
                @Html.PasswordFor(model => model.Senha, new { @class = "form-control", placeholder = "Sua senha" })
                @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                <div class="form-check">
                    @Html.CheckBoxFor(model => model.LembrarMe, new { @class = "form-check-input" })
                    @Html.LabelFor(model => model.LembrarMe, new { @class = "form-check-label" })
                </div>
            </div>

            <button type="submit" class="btn btn-primary w-100 mb-3">Entrar</button>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary(true, "")
                </div>
            }
        }

        <div class="text-center">
            <p class="text-muted">Credenciais padrão:</p>
            <p class="small">Email: admin@helpdesk.com<br>Senha: admin123</p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>